global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets:
          - "{{ hostvars[inventory_hostname]['metrics_ip'] }}:{{ hostvars[inventory_hostname]['metrics_port'] }}"

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['node_exporter_servers'] %}
          - "{{ hostvars[host]['metrics_ip'] }}:{{ hostvars[host]['metrics_port'] }}"
{% endfor %}

  - job_name: 'telegraf'
    static_configs:
      - targets:
{% for host in groups['telegraf_servers'] %}
          - "{{ hostvars[host]['metrics_ip'] }}:{{ hostvars[host]['metrics_port'] }}"
{% endfor %}
